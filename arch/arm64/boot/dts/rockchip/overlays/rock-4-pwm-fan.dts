/dts-v1/;						
/plugin/;						

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/rockchip.h>

/* 	Add an external PWM fan to GPIO pin-11 GPIO4_C2	 (gpio-146) on
	ROCK 4SE & ROCK 4C+ boards
*/

&pwm0 {
    status = "okay";
};

&{/} {
        fan0: pwm-fan {
            compatible = "pwm-fan";
            #cooling-cells = <2>;
            pwms = <&pwm0 0 25000 1>;
            cooling-levels = <255 255 255 255>;
        };
};
    
&cpu_thermal {
    trips {
        cpu_alert0 {
            temperature = <20000>;
        };
    };

    cooling-maps {
        map0 {
            trip = <&cpu_alert0>;
            cooling-device = <&fan0 0 1>;
        };       
    };
};

