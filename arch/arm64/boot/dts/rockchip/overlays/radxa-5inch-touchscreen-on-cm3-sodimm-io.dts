/dts-v1/;
/plugin/;
#include <dt-bindings/display/rockchip_vop.h>

/ {
	metadata {
		title = "Enable Radxa 5-inch Touchscreen";
		compatible = "radxa,radxa-cm3-sodimm-io";
		category = "display";
		exclusive = "dsi0";
		description = "Enable Radxa 5-inch Touchscreen.";
	};

	fragment@0 {
		target = <&video_phy0>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&dsi0>;

		__overlay__ {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			dsi0_panel: dsi-panel@0 {
				compatible = "raspits,tc358762";
				reg = <0x0>;
				status = "okay";

				ports {
					#address-cells = <1>;
					#size-cells = <0>;

					port@0 {
						reg = <0>;

						panel_in_dsi0: endpoint {
							remote-endpoint = <&dsi0_out_panel>;
						};
					};
				};
			};

			ports {
				#address-cells = <1>;
				#size-cells = <0>;

				port@1 {
					reg = <1>;
					#address-cells = <1>;
					#size-cells = <0>;

					dsi0_out_panel: endpoint@0 {
						reg = <0>;
						remote-endpoint = <&panel_in_dsi0>;
					};
				};
			};
		};
	};

	fragment@2 {
		target = <&dsi0_panel>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@3 {
		target = <&dsi0_in_vp0>;

		__overlay__ {
			status = "okay";
		};
	};

	fragment@4 {
		target = <&dsi0_in_vp1>;

		__overlay__ {
			status = "disabled";
		};
	};

	fragment@5 {
		target = <&route_dsi0>;

		__overlay__ {
			status = "disabled";
		};
	};

	fragment@6 {
		target = <&i2c2>;

		__overlay__ {
			status = "okay";
			pinctrl-0 = <&i2c2m1_xfer>;
			#address-cells = <1>;
			#size-cells = <0>;

			rockpi_ft5406: rockpi_ft5406@38 {
				compatible = "rockpi_ft5406";
				reg = <0x38>;
				status = "okay";
			};

			rockpi_mcu: rockpi-mcu@45 {
				compatible = "rockpi_mcu";
				reg = <0x45>;
				status = "okay";
			};
		};
	};

	fragment@7 {
		target = <&vp0>;

		__overlay__ {
			rockchip,plane-mask = <(1 << ROCKCHIP_VOP2_CLUSTER0 | 1 << ROCKCHIP_VOP2_ESMART0 | 1 << ROCKCHIP_VOP2_SMART0)>;
			rockchip,primary-plane = <ROCKCHIP_VOP2_SMART0>;
		};
	};

	fragment@8 {
		target = <&hdmi>;

		__overlay__ {
			status = "disabled";
		};
	};

	fragment@9 {
		target = <&hdmi_in_vp0>;

		__overlay__ {
			status = "disabled";
		};
	};
};